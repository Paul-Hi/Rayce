<scene version="3.0.0">

    <bsdf type="twosided" id="light_gray">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.85, 0.84, 0.8" />
        </bsdf>
    </bsdf>

    <bsdf type="thindielectric" id="acrylic_glass">
        <string name="int_ior" value="acrylic glass" />
        <string name="ext_ior" value="air" />
    </bsdf>

    <bsdf type="plastic" id="some_plastic">
        <rgb name="diffuse_reflectance" value="0.6, 0.6, 0.6" />
        <string name="int_ior" value="polypropylene" />
        <string name="ext_ior" value="air" />
    </bsdf>

    <bsdf type="roughdielectric" id="rough_glass">
        <string name="int_ior" value="bk7" />
        <string name="ext_ior" value="air" />
        <float name="alpha" value="0.025" />
    </bsdf>

    <bsdf type="roughconductor" id="gold">
        <string name="material" value="Au" />
        <float name="alpha_u" value="0.1" />
        <float name="alpha_v" value="0.1" />
    </bsdf>

    <bsdf type="twosided" id="blue">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.2, 0.2, 0.8" />
        </bsdf>
    </bsdf>

    <bsdf type="twosided" id="red">
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.8, 0.2, 0.2" />
        </bsdf>
    </bsdf>

    <bsdf type="twosided" id="rbTexDiffuse">
        <bsdf type="diffuse">
            <texture name="reflectance" type="bitmap">
                <string name="filename" value="rb_checkerboard.bmp" />
                <!--<transform name="to_uv">
                    <scale x="2" y="2"/>
                    <translate x="0.5" y="1.0"/>
                </transform>-->
            </texture>
        </bsdf>
    </bsdf>

    <bsdf type="diffuse" id="light">
        <rgb name="reflectance" value="0, 0, 0" />
    </bsdf>

    <shape type="rectangle" id="floor">
        <transform name="to_world">
            <scale x="2" y="2" />
            <rotate x="1" angle="-90" />
        </transform>
        <ref id="rbTexDiffuse" />
    </shape>

    <shape type="rectangle" id="ceiling">
        <transform name="to_world">
            <scale x="2" y="2" />
            <rotate x="1" angle="90" />
            <translate y="4" />
        </transform>
        <ref id="rbTexDiffuse" />
    </shape>

    <shape type="rectangle" id="back">
        <transform name="to_world">
            <scale x="2" y="2" />
            <translate y="2" z="-2" />
        </transform>
        <ref id="light_gray" />
    </shape>

    <shape type="rectangle" id="left">
        <transform name="to_world">
            <scale x="2" y="2" />
            <rotate y="1" angle="90" />
            <translate y="2" x="-2" />
        </transform>
        <ref id="blue" />
    </shape>

    <shape type="rectangle" id="right">
        <transform name="to_world">
            <scale x="2" y="2" />
            <rotate y="1" angle="-90" />
            <translate y="2" x="2" />
        </transform>
        <ref id="red" />
    </shape>

    <shape type="rectangle" id="main_light_source">
        <transform name="to_world">
            <scale x="0.4" y="0.4" />
            <rotate x="1" angle="90" />
            <translate x="0" y="3.99" />
        </transform>
        <emitter type="area">
            <rgb name="radiance" value="14, 13, 12" />
        </emitter>
        <ref id="light" />
    </shape>

    <shape type="sphere" id="large_sphere">
        <transform name="to_world">
            <scale x="0.65" y="0.65" z="0.65" />
            <translate x="-0.75" y="1.5" z="-0.75" />
        </transform>
        <ref id="rough_glass" />
    </shape>

    <shape type="ply" id="bunny">
        <string name="filename" value="bunny.ply" />
        <transform name="to_world">
            <rotate y="1" angle="18" />
            <rotate z="1" angle="-21" />
            <rotate x="1" angle="-16" />
            <translate x="0.5" y="0.76" z="-1" />
        </transform>
        <ref id="gold" />
    </shape>

    <shape type="obj" id="teapot_lid">
        <string name="filename" value="teapot0.obj" />
        <transform name="to_world">
            <scale x="0.15" y="0.15" z="0.15" />
            <rotate y="1" angle="55" />
            <rotate z="1" angle="12" />
            <translate x="0" z="0.25" y="1.2" />
        </transform>
        <ref id="acrylic_glass" />
    </shape>
    <!--<shape type="obj" id="teapot_kettle">
        <string name="filename" value="teapot1.obj" />
        <transform name="to_world">
            <scale x="0.15" y="0.15" z="0.15" />
            <rotate y="1" angle="55" />
            <rotate x="1" angle="32" />
            <rotate z="1" angle="12" />
            <translate x="0" z="0.25" y="0.6"/>
        </transform>
        <ref id="some_plastic" />
    </shape>-->

</scene>