<scene version="3.0.0">

    <bsdf type="diffuse" id="light_gray">
        <rgb name="reflectance" value="0.85, 0.84, 0.8" />
    </bsdf>

    <bsdf type="thindielectric" id="acrylic_glass">
        <string name="int_ior" value="acrylic glass" />
        <string name="ext_ior" value="air" />
    </bsdf>

    <bsdf type="plastic" id="some_plastic">
        <rgb name="diffuse_reflectance" value="0.6, 0.6, 0.6" />
        <string name="int_ior" value="polypropylene" />
        <string name="ext_ior" value="air" />
    </bsdf>

    <bsdf type="roughdielectric" id="rough_glass">
        <string name="int_ior" value="bk7" />
        <string name="ext_ior" value="air" />
        <float name="alpha" value="0.05" />
    </bsdf>

    <bsdf type="roughconductor" id="gold">
        <string name="material" value="Au" />
        <rgb name="specular_reflectance" value="0.944, 0.776, 0.373" />
        <float name="alpha_u" value="0.2" />
        <float name="alpha_v" value="0.05" />
    </bsdf>

    <bsdf type="diffuse" id="blue">
        <rgb name="reflectance" value="0.2, 0.2, 0.8" />
    </bsdf>

    <bsdf type="diffuse" id="red">
        <rgb name="reflectance" value="0.8, 0.2, 0.2" />
    </bsdf>

    <bsdf type="diffuse" id="rbTexDiffuse">
        <texture name="reflectance" type="bitmap">
            <string name="filename" value="rb_checkerboard.bmp" />
        </texture>
    </bsdf>

    <bsdf type="roughconductor" id="rbTexConductor">
        <rgb name="specular_reflectance" value="0.912, 0.914, 0.920" />
        <texture type="bitmap" name="alpha">
            <string name="filename" value="rb_checkerboard_alpha.bmp" />
        </texture>
    </bsdf>

    <bsdf type="diffuse" id="light">
        <rgb name="reflectance" value="0, 0, 0" />
    </bsdf>

    <shape type="rectangle" id="floor">
        <transform name="to_world">
            <scale x="2" z="2" />
        </transform>
        <ref id="rbTexConductor" />
    </shape>

    <shape type="rectangle" id="ceiling">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate x="1" angle="180" />
            <translate y="4" />
        </transform>
        <ref id="rbTexDiffuse" />
    </shape>

    <shape type="rectangle" id="back">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate x="1" angle="90" />
            <translate y="2" z="-2" />
        </transform>
        <ref id="light_gray" />
    </shape>

    <shape type="rectangle" id="left">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate z="1" angle="-90" />
            <translate y="2" x="-2" />
        </transform>
        <ref id="blue" />
    </shape>

    <shape type="rectangle" id="right">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate z="1" angle="90" />
            <translate y="2" x="2" />
        </transform>
        <ref id="red" />
    </shape>

    <shape type="ply" id="bunny">
        <string name="filename" value="bunny.ply" />
        <transform name="to_world">
            <translate x="0.5" y="-0.03" z="0.5" />
        </transform>
        <ref id="rough_glass" />
    </shape>

    <shape type="rectangle" id="main_light_source">
        <transform name="to_world">
            <scale x="0.5" z="0.5" />
            <rotate z="1" angle="180" />
            <translate x="0" y="3.99"/>
        </transform>
        <emitter type="area">
            <rgb name="radiance" value="40.0, 35.0, 30.0" />
        </emitter>
        <ref id="light" />
    </shape>

    <shape type="sphere" id="large_sphere">
        <transform name="to_world">
            <scale x="0.75" y="0.75" z="0.75" />
            <translate x="1" y="0.75" z="-1" />
        </transform>
        <ref id="gold" />
    </shape>

    <shape type="obj" id="teapot_lid">
        <string name="filename" value="teapot0.obj" />
        <transform name="to_world">
            <scale x="0.15" y="0.15" z="0.15" />
            <rotate y="1" angle="55" />
            <translate x="-1.2" y="-0.69" z="1" />
        </transform>
        <ref id="acrylic_glass" />
    </shape>
    <shape type="obj" id="teapot_kettle">
        <string name="filename" value="teapot1.obj" />
        <transform name="to_world">
            <scale x="0.15" y="0.15" z="0.15" />
            <rotate y="1" angle="55" />
            <translate x="-1" z="0.25" />
        </transform>
        <ref id="some_plastic" />
    </shape>

</scene>