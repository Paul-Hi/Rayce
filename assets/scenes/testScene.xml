<scene version="3.0.0">

    <bsdf type="diffuse" id="light_gray">
        <rgb name="reflectance" value="0.85, 0.84, 0.8" />
    </bsdf>

    <bsdf type="thindielectric" id="acrylic glass">
        <string name="int_ior" value="acrylic glass" />
        <string name="ext_ior" value="air" />
    </bsdf>

    <bsdf type="dielectric" id="glass">
        <string name="int_ior" value="bk7" />
        <string name="ext_ior" value="air" />
    </bsdf>

    <bsdf type="diffuse" id="blue">
        <rgb name="reflectance" value="0.2, 0.2, 0.8" />
    </bsdf>

    <bsdf type="diffuse" id="red">
        <rgb name="reflectance" value="0.8, 0.2, 0.2" />
    </bsdf>

    <bsdf type="diffuse" id="rbTex">
        <rgb name="reflectance" value="1.0, 1.0, 1.0" />
        <texture type="bitmap" name="reflectance">
            <string name="filename" value="rb_checkerboard.bmp"/>
        </texture>
    </bsdf>

    <bsdf type="diffuse" id="light">
        <rgb name="reflectance" value="0.1, 0.1, 0.1" />
    </bsdf>

    <shape type="rectangle" id="floor">
        <transform name="to_world">
            <scale x="2" z="2" />
        </transform>
        <ref id="rbTex" />
    </shape>

    <shape type="rectangle" id="ceiling">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate x="1" angle="180" />
            <translate y="4" />
        </transform>
        <ref id="light_gray" />
    </shape>

    <shape type="rectangle" id="back">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate x="1" angle="90" />
            <translate y="2" z="-2" />
        </transform>
        <ref id="light_gray" />
    </shape>

    <shape type="rectangle" id="left">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate z="1" angle="-90" />
            <translate y="2" x="-2" />
        </transform>
        <ref id="blue" />
    </shape>

    <shape type="rectangle" id="right">
        <transform name="to_world">
            <scale x="2" z="2" />
            <rotate z="1" angle="90" />
            <translate y="2" x="2" />
        </transform>
        <ref id="red" />
    </shape>

    <shape type="ply" id="bunny">
        <string name="filename" value="bunny.ply" />
        <transform name="to_world">
            <translate x="0.5" y="-0.03" z="0.5" />
        </transform>
        <ref id="glass" />
    </shape>

    <shape type="sphere" id="light_source">
        <transform name="to_world">
            <scale x="0.25" y="0.25" z="0.25" />
            <translate x="0" y="3.6" z="-1.6" />
        </transform>
        <emitter type="area">
            <rgb name="radiance" value="52.0, 51.0, 50.0" />
        </emitter>
        <ref id="light" />
    </shape>

    <shape type="sphere" id="small_sphere">
        <transform name="to_world">
            <scale x="0.5" y="0.5" z="0.5" />
            <translate x="-1" y="0.5" z="-0" />
        </transform>
        <ref id="light_gray" />
    </shape>

    <shape type="sphere" id="large_sphere">
        <transform name="to_world">
            <scale x="0.75" y="0.75" z="0.75" />
            <translate x="1" y="0.75" z="-1" />
        </transform>
        <ref id="light_gray" />
    </shape>
</scene>